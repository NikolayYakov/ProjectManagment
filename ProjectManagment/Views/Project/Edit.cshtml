@model ProjectModel

@{
    ViewBag.Title = "Edit Project";
    Layout = "_Layout"; 
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4 text-center">Edit Project</h2>
            <form action="@Url.Content($"~/project/{@Model.ProjectId}/edit")" method="post">
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
                </div>

                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea class="form-control" id="Description" name="Description" rows="4" required>@Model.Description</textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    <a href="~/project/all" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        margin-bottom: 10px;
    }

    .btn {
        margin-right: 10px;
        padding: 10px 20px;
    }

    .container {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #343a40;
    }
</style>
