@model List<ProjectModel>

@{
    ViewBag.Title = "My Projects";
    var antiForgeryToken = Html.AntiForgeryToken().ToString();
}

<h2>My Projects</h2>

<div>
    <a href="@Url.Action("Create", "Project")" class="btn btn-primary">Create New Project</a>
    <a href="@Url.Action("Join", "Project")" class="btn btn-secondary">Join Projects</a>
</div>

<div class="project-board">
    @foreach (var project in Model)
    {
        <div class="project-card" data-project-id="@project.ProjectId">
            <a href="@Url.Action("Details", "Project", new { id = project.ProjectId })" class="project-details-link">
                <h3>@project.Title</h3>
                <p>@project.Description</p>
            </a>
            <div class="project-actions">
                <a href="@Url.Action("Edit", "Project", new { id = project.ProjectId })" class="project-edit-link">Edit</a>
                <a href="#" class="project-delete-link" onclick="deleteProject('@project.ProjectId');">Delete</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteProject(projectId) {
            var requestBody = {
                Id: projectId
            };

            fetch(`/Project/Delete`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestBody)
            })
                .then(response => {
                    if (response.ok) {
                        document.querySelector(`[data-project-id="${projectId}"]`).remove();
                    } else {
                        alert('Failed to delete project.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred.');
                });
        }
    </script>
}

<style>
    .btn {
        display: inline-block;
        margin: 10px 10px 20px 0;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
    }

