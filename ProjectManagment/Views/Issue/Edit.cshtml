@model ProjectManagment.Models.IssueEditModel

@{
    Layout = "_ProjectLayout";
    ViewData["Title"] = "Edit Issue";
}

<div class="issue-details-container">
    <div class="issue-header">
    </div>

    <form asp-action="EditIssue" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="issue-details">
            <div class="issue-body">
                <div class="form-group">
                    <label for="Title">Title</label>
                    <input type="text" class="form-control form-control-sm" asp-for="Title" />
                </div>

                <div class="form-group">
                    <label for="Body">Description</label>
                    <textarea class="form-control form-control-sm" asp-for="Body" rows="5"></textarea>
                </div>
            </div>

            <div class="issue-meta">
                <div class="meta-section">
                    <label for="Assignees">Assignees</label>
                    <select class="form-control form-control-sm select2" asp-for="Assignees" asp-items="@(new SelectList(Model.AvailableAssignees))" multiple="multiple">
                    </select>
                </div>
                <div class="meta-section">
                    <label for="Area">Area</label>
                    <select class="form-control form-control-sm" asp-for="Area" asp-items="@(new SelectList(Model.AvailableAreas))">
                        <option value="" disabled selected>Select an area</option>
                    </select>
                </div>
                <div class="meta-section">
                    <label for="Labels">Labels</label>
                    <select class="form-control form-control-sm select2" asp-for="Labels" asp-items="@(new SelectList(Model.AvailableLabels))" multiple="multiple">
                    </select>
                </div>
                <div class="meta-section">
                    <label for="Milestone">Milestone</label>
                    <select class="form-control form-control-sm" asp-for="Milestone" asp-items="@(new SelectList(Model.AvailableMilestones))">
                        <option value="" disabled selected>Select a milestone</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="issue-footer">
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="window.location.href='/issue/details/@Model.Id'">Cancel</button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        $('.select2').select2({
            tags: true,
            tokenSeparators: [','],
            width: '100%',
        });
    });
</script>

<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .issue-details-container {
        max-width: 1000px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .issue-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .issue-actions .btn {
        margin-left: 10px;
    }

    .issue-details {
        display: flex;
    }

    .issue-body {
        flex: 1;
        margin-right: 20px;
    }

    .issue-meta {
        flex: 0 0 200px;
    }

    .meta-section {
        margin-bottom: 10px; /* Reduced margin-bottom */
    }

        .meta-section label {
            display: block;
            margin-bottom: 5px;
            font-size: 12px; /* Reduced font size */
            color: #333;
        }

        .meta-section input,
        .meta-section textarea,
        .meta-section select {
            width: 100%;
            padding: 6px; /* Reduced padding */
            font-size: 12px; /* Reduced font size */
            color: #555;
            border: 1px solid #ddd;
            border-radius: 3px;
        }

        .meta-section ul {
            list-style-type: none;
            padding-left: 0;
        }

            .meta-section ul li {
                background-color: #e9ecef;
                border-radius: 2px;
                padding: 2px 5px;
                display: inline-block;
                margin: 2px 0;
            }

    .issue-footer {
        display: flex;
        justify-content: flex-start;
        margin-top: 0px; /* Reduced margin-top */
    }

        .issue-footer .btn {
            margin-right: 10px;
        }

    /* Target only multiselect dropdowns */
    .select2-container--default .select2-selection--multiple {
        min-height: 30px; /* Adjusted min-height */
        border-radius: 3px;
        border: 1px solid #ddd;
    }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            padding: 2px 5px; /* Adjusted padding */
            font-size: 12px; /* Adjusted font size */
        }
</style>
