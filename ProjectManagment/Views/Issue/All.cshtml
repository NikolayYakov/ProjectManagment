@model IssueViewModel

@{
    ViewBag.Title = "Issues";
    Layout = "_ProjectLayout";
}

<h2>Issues</h2>

<form method="get" action="@Url.Action("AllIssues")">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search issues..." />
    <button type="submit">Search</button>
</form>

<table class="issues-table">
    <thead>
        <tr>
            <th>Issue Number</th>
            <th>Title</th>
            <th>Labels</th>
            <th>Assignees</th>
            <th>Milestone</th>
            <th>Area</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model.Issues)
        {
            <tr onclick="location.href='@Url.Action("Details", "Issue", new { id = issue.IssueNumber })'">
                <td>@issue.IssueNumber</td>
                <td>@issue.Title</td>
                <td>@issue.Labels</td>
                <td>@issue.Assignees</td>
                <td>@issue.Milestone</td>
                <td>@issue.Area</td>
                <td>@issue.Status</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-container">
    @if (Model.PageNumber > 1)
    {
        <a href="@Url.Action("AllIssues", new { page = Model.PageNumber - 1, searchTerm = Model.SearchTerm })">Previous</a>
    }
    Page @Model.PageNumber of @Model.TotalPages
    @if (Model.PageNumber < Model.TotalPages)
    {
        <a href="@Url.Action("AllIssues", new { page = Model.PageNumber + 1, searchTerm = Model.SearchTerm })">Next</a>
    }
</div>


<style>
    /* Ensure no conflicting styles */
    .container-fluid {
        padding-left: 0;
        padding-right: 0;
    }

    /* Table and pagination styles */
    .issues-table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f4f4f4;
    }

    tr {
        cursor: pointer;
    }

        tr:hover {
            background-color: #f0f0f0;
        }

    .pagination-container {
        margin-top: 20px;
    }

    form {
        margin-bottom: 20px;
    }
</style>
