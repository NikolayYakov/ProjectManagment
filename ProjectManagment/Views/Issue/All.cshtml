@model IssueViewModel

@{
    ViewBag.Title = "Issues";
    Layout = "_ProjectLayout";
}

<h2>Issues</h2>

<div class="header">
    <form method="get" action="@Url.Action("all")">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search issues..." />
        <button type="submit">Search</button>
    </form>
    <a class="create-button" href="~/project/@Model.ProjectId/issue/create">Create Issue</a>
</div>

<table class="issues-table">
    <thead>
        <tr>
            <th>Issue Number</th>
            <th>Title</th>
            <th>Labels</th>
            <th>Assignees</th>
            <th>Milestone</th>
            <th>Area</th>
            <th>Status</th>
            <th>Sprints</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model.Issues)
        {
            <tr onclick="navigateToIssue('@Model.ProjectId', '@issue.IssueId')">
                <td>@issue.IssueNumber</td>
                <td>@issue.Title</td>
                <td>@issue.Labels</td>
                <td>@issue.Assignees</td>
                <td>@issue.Milestone</td>
                <td>@issue.Area</td>
                <td>@issue.Status</td>
                <td>@issue.Sprint</td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination-container">
    @if (Model.PageNumber > 1)
    {
        <a href="@Url.Action("AllIssues", new { page = Model.PageNumber - 1, searchTerm = Model.SearchTerm })">Previous</a>
    }
    Page @Model.PageNumber of @Model.TotalPages
    @if (Model.PageNumber < Model.TotalPages)
    {
        <a href="@Url.Action("AllIssues", new { page = Model.PageNumber + 1, searchTerm = Model.SearchTerm })">Next</a>
    }
</div>

<script type="text/javascript">
    function navigateToIssue(projectId, issueId) {
        var url = '/project/' + projectId + '/issue/' + issueId + '/details';
        location.href = url;
    }
</script>

<style>
    /* Ensure no conflicting styles */
    .container-fluid {
        padding-left: 0;
        padding-right: 0;
    }

    /* Header styles */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    /* Table and pagination styles */
    .issues-table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f4f4f4;
    }

    tr {
        cursor: pointer;
    }

        tr:hover {
            background-color: #f0f0f0;
        }

    .pagination-container {
        margin-top: 20px;
    }

    form {
        margin-bottom: 0;
    }

    /* Create button styles */
    .create-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .create-button:hover {
            background-color: #0056b3;
        }
</style>
